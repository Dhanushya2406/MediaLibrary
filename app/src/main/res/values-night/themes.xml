<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.MediaLibraryTask" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Change status bar and navigation colors -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/light_grey</item>
        <item name="android:navigationBarColor">@color/light_grey</item>

        <!-- Window background (Change grey to white if needed) -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Change this to transparent or a light color -->
        <item name="android:backgroundTint">@android:color/transparent</item>

        <!-- Ensure text color does not override everything -->
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.Style.White" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@color/grey</item>
        <item name="backgroundTint">@color/grey</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Theme.MediaLibraryTask" parent="Base.Theme.MediaLibraryTask" />
</resources>